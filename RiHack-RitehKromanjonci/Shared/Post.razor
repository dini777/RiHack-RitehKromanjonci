@inject IJSRuntime jsruntine

<div class="post_container" style="justify-content: center; align-content: center;">
    <div>
        <div class="location-time">
            <p>@EventTime</p>
        </div>
        <div class="username">
            <p>@Username:</p>
        </div>
    </div>
    <div>
        <p style="font-size: 20px">@PostDescription</p>
    </div>
    <div class="map">
        
        
        
    </div>
</div>
    


@code {
    [Parameter]
    public string Username { get; set; }

    [Parameter]
    public DateTime EventTime { get; set; }

    [Parameter]
    public string PostDescription { get; set; }

    [Parameter]
    public double Latitude { get; set; }

