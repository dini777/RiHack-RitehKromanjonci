@page
@model RiHack_RitehKromanjonci.Pages.RegisterModel
<link rel="stylesheet" href="~/css/login-novi.css" />
<div class="login-box">
    <h2>Registracija</h2>
    <h2>@Model.info</h2>
    <form action="/register" method="post">
        @Html.AntiForgeryToken()
        <div class="user-box">
            <input type="text" name="Email" required="" value="@Model.Email">
            <label>E-Mail</label>
        </div>
        <div class="user-box">
            <input required type="text" name="Username" value="@Model.Username">
            <label>Username</label>
        </div>
        <div class="user-box">
            <input required type="password" name="Password" value="@Model.Password">
            <label>Lozinka</label>
        </div>
        <div class="user-box">
            <input required type="text" name="OIB" value="@Model.OIB">
            <label>OIB</label>
        </div>
        <button class="submit-button" type="submit">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Potvrdi
        </button>
    </form>
</div>