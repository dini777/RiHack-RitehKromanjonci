@page
@model RiHack_RitehKromanjonci.Pages.LoginModel
@{
    ViewBag.Title = "Prijava";
}

<link rel="stylesheet" href="~/css/login-novi.css" />

<header>
    <div class="header-container">
        <div class="header-wrapper">
            <div class="logoBox">
                <button><img src="images/icons8-home-480.png" alt="home"></button>
            </div>
            <div class="searchBox">
                <input type="search">
                <i class="fas fa-search"></i>
            </div>
            <div class="iconBox2">
                <button><img src="images/icons8-chat-50.png" alt="chat"></button>
                <button><img src="images/icons8-logout-30.png" alt="logout"></button>
                <button><label><img src="images/user.jpg" alt="user"></label></button>

            </div>
        </div>
    </div>
</header>

<div class="login-box">
    <h2>Login</h2>
    <form action="/login" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All"></div>

        <div class="user-box form-group">
            <input required type="text" name="Email" placeholder="E-mail" value="@Model.Email" />
            <label>E-Mail</label>
        </div>
        <div class="user-box form-group">
            <input required type="password" name="Password" value="@Model.Password">
            <label>Lozinka</label>
        </div>
        <button class="submit-button" type="submit">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Potvrdi
        </button>
        <br />
        <br />
        <br />
        <a href="/Register">Niste još uvijek registrirani? Kliknite ovdje.</a>
    </form>
</div>

